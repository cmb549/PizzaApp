<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CurrentOrderActivity" android:background="#E2E1CEA0">

    <TextView
            android:layout_width="398dp"
            android:layout_height="73dp"
            android:text="Current Order"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="600dp" android:textSize="50sp"
            android:fontFamily="cursive" android:textColor="#000000"
            app:layout_constraintVertical_bias="0.006"
            android:textAlignment="center" android:id="@+id/currentOrderTextView"
            app:layout_constraintHorizontal_bias="0.6"/>
    <TextView
            android:text="Customer Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneNoTextView"
            android:textSize="14sp" android:fontFamily="sans-serif-medium"
            android:textColor="#000000" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="97dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="615dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp" android:layout_marginEnd="234dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:focusable="false"
            android:layout_width="169dp"
            android:layout_height="49dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/phoneNoEditText"
            app:layout_constraintTop_toBottomOf="@+id/currentOrderTextView" android:layout_marginStart="14dp"
            app:layout_constraintStart_toEndOf="@+id/phoneNoTextView" android:layout_marginEnd="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp" android:textColor="#000000"/>
    <TextView
            android:text="Subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/subtotalTextView"
            android:fontFamily="sans-serif-medium" android:textSize="14sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="528dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="184dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginEnd="330dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Order Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orderTotalTextView"
            android:fontFamily="sans-serif-medium" android:textSize="14sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="631dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="81dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="309dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:focusable="false"
            android:layout_width="121dp"
            android:layout_height="47dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/subtotalEditText"
            android:fontFamily="sans-serif-medium" android:textSize="14sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="503dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="181dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:layout_marginEnd="190dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:focusable="false"
            android:layout_width="121dp"
            android:layout_height="44dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/orderTotalEditText"
            android:fontFamily="sans-serif-medium" android:textSize="14sp"
            android:textColor="#000000" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="618dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="69dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="102dp" android:layout_marginEnd="188dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Order Pizza"
            android:layout_width="146dp"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@+id/removePizzaButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="240dp" android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" android:backgroundTint="#E2A1690A"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.515"
            android:onClick="orderPizza"/>
    <TextView
            android:text="Sales Tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/salesTaxTextView"
            android:fontFamily="sans-serif-medium" android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="572dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="140dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginEnd="321dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:focusable="false"
            android:layout_width="122dp"
            android:layout_height="41dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/salesTaxEditText"
            android:textSize="14sp" android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="565dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="125dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp" android:layout_marginEnd="188dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ListView
            android:layout_width="409dp"
            android:layout_height="378dp" tools:layout_editor_absoluteY="124dp" tools:layout_editor_absoluteX="1dp"
            android:background="#FFFFFF" android:id="@+id/orderView"/>
</androidx.constraintlayout.widget.ConstraintLayout>