<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#E2E1CEA0">
    <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/priceTextView"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="595dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="117dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp" android:layout_marginEnd="325dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:focusable="false"
            android:layout_width="144dp"
            android:layout_height="50dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/priceEditText"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="571dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="110dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="107dp" android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Add to Order"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#E2A1690A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="584dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="110dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="251dp" android:layout_marginEnd="38dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="addToOrder"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Additional Toppings"
            android:layout_width="132dp"
            android:layout_height="21dp" android:id="@+id/addTopTextView"
            android:textAlignment="center" android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="292dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="418dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="263dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Selected Toppings"
            android:layout_width="133dp"
            android:layout_height="18dp" android:id="@+id/selectTopTextView"
            android:textAlignment="center" android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="295dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="418dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="254dp" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Pizza Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sizeTextView"
            android:textSize="14sp" android:fontFamily="sans-serif-medium"
            android:textColor="#000000" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="647dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="259dp" android:layout_marginEnd="87dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    <Spinner
            android:id="@+id/sizeDropDown"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="88dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="608dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="259dp"
            android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ListView
            android:layout_width="138dp"
            android:layout_height="192dp"
            android:background="#FFFFFF" android:id="@+id/additionalListView"
            app:layout_constraintTop_toBottomOf="@+id/addTopTextView" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="3dp"
            android:layout_marginEnd="270dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/priceTextView" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.068"/>
    <ListView
            android:layout_width="140dp"
            android:layout_height="187dp"
            android:background="#FFFFFF" android:id="@+id/currentListView"
            app:layout_constraintTop_toBottomOf="@+id/selectTopTextView" android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/addToOrderButton" app:layout_constraintVertical_bias="0.093"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="259dp"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="230dp"
            android:layout_height="212dp" app:srcCompat="@drawable/deluxepizza" android:id="@+id/pizzaImageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="494dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="165dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Deluxe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pizzaText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="706dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="112dp" android:layout_marginEnd="257dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>