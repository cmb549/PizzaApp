<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#7ED4DF">
    <TextView
            android:layout_width="395dp"
            android:layout_height="78dp"
            android:text="RU Pizzeria"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="600dp" android:textSize="50sp"
            android:fontFamily="cursive" android:textColor="#FF0000"
            app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center" android:background="#E2E1CEA0" android:id="@+id/currentOrderTextView"
            android:gravity="center_horizontal"/><![CDATA[

    />










    ]]>
    <TextView
            android:text="Customer Phone Number"
            android:layout_width="148dp"
            android:layout_height="22dp" android:id="@+id/phoneTextView"
            android:fontFamily="sans-serif-medium" android:textSize="14sp"
            android:textColor="#000000" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="118dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="591dp" android:layout_marginEnd="225dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"/>
    <Button
            android:text="order Deluxe"
            android:layout_width="159dp"
            android:layout_height="40dp" android:id="@+id/orderDeluxe"
            app:layout_constraintTop_toBottomOf="@+id/deluxeImageVIew" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="83dp" android:layout_marginEnd="240dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.788"
            android:textSize="12sp"
            android:onClick="startOrder" android:fontFamily="sans-serif-medium"
            android:backgroundTint="#E2A1690A" android:layout_marginTop="-50dp"
            app:layout_constraintVertical_bias="0.036"/>
    <ImageView
            android:layout_width="159dp"
            android:layout_height="78dp" app:srcCompat="@drawable/deluxepizza" android:id="@+id/deluxeImageVIew"
            android:background="#D3C123"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="163dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="490dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp" android:layout_marginEnd="225dp"
            app:layout_constraintEnd_toEndOf="parent" android:clickable="false"/>
    <Button
            android:text="order Hawaiian"
            android:layout_width="162dp"
            android:layout_height="46dp" android:id="@+id/orderHawaiian"
            android:textSize="12sp"
            android:clickable="true"
            android:onClick="startOrder" android:fontFamily="sans-serif-medium" android:backgroundTint="#E2A1690A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="408dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="277dp" android:layout_marginEnd="208dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="42dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="157dp"
            android:layout_height="79dp" app:srcCompat="@drawable/hawaiianpizza" android:id="@+id/hawaiianImageVIew"
            android:background="#A1FFAA00"
            app:layout_constraintTop_toBottomOf="@+id/orderDeluxe"
            app:layout_constraintBottom_toTopOf="@+id/orderHawaiian" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintVertical_bias="0.419" android:clickable="false"/>
    <Button
            android:text="order Pepperoni"
            android:layout_width="163dp"
            android:layout_height="49dp" android:id="@+id/orderPepperoni"
            app:layout_constraintTop_toBottomOf="@+id/pepperoniImageVIew" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="240dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.23" app:layout_constraintVertical_bias="0.0"
            android:clickable="true" android:onClick="startOrder" android:fontFamily="sans-serif-medium"
            android:backgroundTint="#E2A1690A"/>
    <ImageView
            android:layout_width="164dp"
            android:layout_height="99dp" app:srcCompat="@drawable/pepperonipizza" android:id="@+id/pepperoniImageVIew"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/orderHawaiian" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintEnd_toStartOf="@+id/storeOrdersImageVIew"
            app:layout_constraintBottom_toTopOf="@+id/orderPepperoni" android:clickable="false"/>
    <Button
            android:text="Current Order"
            android:layout_width="145dp"
            android:layout_height="41dp" android:id="@+id/currentOrderButton"
            android:textSize="12sp" android:clickable="true"
            android:fontFamily="sans-serif-medium" android:backgroundTint="#E2A1690A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/orderHawaiian" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="422dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="268dp" android:onClick="currentOrderClick"/>
    <Button
            android:text="Store Orders"
            android:layout_width="137dp"
            android:layout_height="44dp" android:id="@+id/storeOrdersButton"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/storeOrdersImageVIew" android:layout_marginStart="41dp"
            app:layout_constraintStart_toEndOf="@+id/orderPepperoni" android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="66dp" android:textSize="12sp" android:clickable="true"
            android:fontFamily="sans-serif-medium" android:backgroundTint="#E2A1690A"
            android:onClick="storeOrderClick"/>
    <ImageView
            android:layout_width="146dp"
            android:layout_height="116dp" app:srcCompat="@drawable/pizzastore" android:id="@+id/currentOrderImageVIew"
            android:cropToPadding="false"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/hawaiianImageVIew" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/currentOrderButton" android:background="#D1A5A5"
            app:layout_constraintHorizontal_bias="0.558" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp" android:clickable="false"/>
    <ImageView
            android:layout_width="137dp"
            android:layout_height="114dp" app:srcCompat="@drawable/shoppingcart" android:id="@+id/storeOrdersImageVIew"
            android:background="#C695A6" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/currentOrderButton" android:layout_marginStart="41dp"
            app:layout_constraintStart_toEndOf="@+id/pepperoniImageVIew" android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/storeOrdersButton"/>
    <EditText
            android:layout_width="164dp"
            android:layout_height="42dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phoneNoInput"
            app:layout_constraintTop_toBottomOf="@+id/currentOrderTextView" android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@+id/phoneTextView" android:layout_marginBottom="125dp"
            app:layout_constraintBottom_toTopOf="@+id/currentOrderImageVIew" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:editable="true" android:fontFamily="sans-serif-medium"
            android:layout_marginTop="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>