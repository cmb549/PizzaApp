<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CurrentOrderActivity" android:background="#E2E1CEA0">

    <TextView
            android:layout_width="399dp"
            android:layout_height="73dp"
            android:text="Store Orders"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="600dp" android:textSize="50sp"
            android:fontFamily="cursive" android:textColor="#000000"
            app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center" android:id="@+id/storeOrdersTextView"/>
    <TextView
            android:text="Customer Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneNoTextView2"
            android:textSize="14sp" android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="139dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="573dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="235dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="174dp"
            android:layout_height="21dp" android:id="@+id/phoneNoDropDown"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="137dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="573dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="205dp" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Order Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orderTotalNonEdit"
            android:textSize="14sp" android:fontFamily="sans-serif-medium"
            android:textColor="#000000" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginTop="190dp"
            app:layout_constraintEnd_toStartOf="@+id/orderTotal" android:layout_marginEnd="34dp"
            app:layout_constraintHorizontal_bias="0.02" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="522dp"/>
    <EditText
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/orderTotal"
            android:textSize="14sp" android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="181dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="510dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="211dp" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="409dp"
            android:layout_height="383dp" android:id="@+id/orderText"
            android:background="#FFFFFF" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="231dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="117dp"
            android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Cancel Order"
            android:layout_width="159dp"
            android:layout_height="64dp"
            android:onClick="cancelOrder"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="644dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="23dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="115dp"
            android:layout_marginEnd="137dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>